<?xml version="1.0" encoding="utf-8"?>
<!--空心圆角矩形  -->
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <corners android:radius="10dp" /><!-- 圆角半径 -->

    <stroke
        android:width="1dp"
        android:color="@android:color/holo_blue_dark" /><!--矩形的边线  -->

    <size
        android:height="32dp"
        android:width="600dp" /><!--矩形的宽高  -->

    <gradient
        android:endColor="#00000000"
        android:startColor="#00000000" /><!-- 矩形的内部颜色，这里设置成白色，即空心 -->

</shape>