<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:id="@+id/profileinfocommonattributeui">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/relative_layout_style"
        android:id="@+id/relativeLayoutcommonattribute">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/file_attribute"
            android:textColor="@color/normal_text_color"
            android:textSize="18sp"
            android:id="@+id/profileinfofileattribut"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attribute_done"
            android:textSize="18dp"
            android:id="@+id/profileinfodone"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#ff121aff" />

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/profileinfocommonattributelistView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayoutcommonattribute" />

    <LinearLayout
        android:id="@+id/profileInfo_linearLayout_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" >

        <View
            android:id="@+id/profileInfo_dot_0"
            android:layout_width="6dip"
            android:layout_height="6dip"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:visibility="invisible"
            android:background="@drawable/dot_focused"
            />
        <View
            android:id="@+id/profileInfo_dot_1"
            android:layout_width="6dip"
            android:layout_height="6dip"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:visibility="invisible"
            android:background="@drawable/dot_normal"
            />
        <View
            android:id="@+id/profileInfo_dot_2"
            android:layout_width="6dip"
            android:layout_height="6dip"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:visibility="invisible"
            android:background="@drawable/dot_normal"
            />

    </LinearLayout>


</RelativeLayout>
