<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="45.0dip"
    android:background="@drawable/home_bottom_bar"
    >

    <Button
        android:id="@+id/home_bottom_bar_addservice_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add"
        android:textSize="16dip"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="5.0dip"
        android:gravity="center"
        android:drawableLeft="@drawable/home_bottom_bar_addservice_btn"
        android:background="@android:color/transparent">
    </Button>

    <Button
        android:id="@+id/home_bottom_bar_more_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/more"
        android:textSize="10dip"
        android:textColor="#ffffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5.0dip"
        android:drawableTop="@drawable/home_bottom_bar_more_btn"
        android:background="@android:color/transparent"
        />
</RelativeLayout>