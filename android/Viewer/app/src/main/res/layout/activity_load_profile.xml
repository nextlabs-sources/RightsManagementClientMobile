<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EDEDED"
    android:id="@+id/loadProfile">

    <RelativeLayout
        android:id="@+id/title_loadProfile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/relative_layout_style"
        >

        <TextView
            android:id="@+id/tv_loadProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Load Profile"
            android:textSize="18dp"
            android:textColor="@android:color/background_dark"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/loadProfile_Done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:text="Done"
            android:textColor="#ff121aff"
            android:textSize="18dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profile_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_loadProfile"
        android:background="@drawable/profile_history_style"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PROFILE  HISTORY"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"
            android:textColor="#000000"
            android:id="@+id/tv_signIn" />

    </RelativeLayout>

    <com.widgets.SwipeMenuAdapter.SwipeMenuListView
        android:id="@+id/list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="1px"
        android:divider="#EDEDED"
        android:listSelector="#00000000"
        android:layout_below="@+id/profile_history"
        />

</RelativeLayout>