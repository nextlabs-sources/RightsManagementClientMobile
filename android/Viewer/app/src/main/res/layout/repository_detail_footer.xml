<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/repository_detail_footer_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    >

    <TextView
        android:id="@+id/repository_cleanCache"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="@string/name_repository_cleanCache"
        android:textSize="18sp"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="@color/Blue"
        android:background="@drawable/home_item_whitebk"
        />

    <RelativeLayout
        android:id="@+id/repository_delete_layout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@+id/repository_cleanCache"
        android:layout_marginTop="60dp"
        android:background="@drawable/home_item_whitebk"
        >
        <TextView
            android:id="@+id/repository_delete"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/name_repository_deleteRepository"
            android:textSize="18sp"
            android:textColor="@color/Red"
            android:gravity="center_vertical|center_horizontal"
            />

    </RelativeLayout>

</RelativeLayout>