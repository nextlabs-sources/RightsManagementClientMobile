    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/add_repo_bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:text="@string/add_service"
