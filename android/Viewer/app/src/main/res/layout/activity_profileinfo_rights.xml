<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:id="@+id/profileinforightsui">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/relative_layout_style"
        android:id="@+id/relativeLayoutrights">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/attribute_rights"
            android:textColor="@color/normal_text_color"
            android:textSize="18dp"
            android:id="@+id/profileinfofilerights"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:drawableLeft="@drawable/file_category_back"
            android:textSize="18dp"
            android:id="@+id/profileinforightsback"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/normal_text_color" />

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:id="@+id/profileinforightslistView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayoutrights" />

    <LinearLayout
        android:id="@+id/right_linearLayout_dot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" >

        <View
            android:id="@+id/right_dot_0"
            android:layout_width="6dip"
            android:layout_height="6dip"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:background="@drawable/dot_normal"
            />
        <View
            android:id="@+id/right_dot_1"
            android:layout_width="6dip"
            android:layout_height="6dip"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:background="@drawable/dot_normal"
            />
        <View
            android:id="@+id/right_dot_2"
            android:layout_width="6dip"
            android:layout_height="6dip"
            android:layout_marginLeft="6dip"
            android:layout_marginRight="6dip"
            android:background="@drawable/dot_focused"
            />

    </LinearLayout>

</RelativeLayout>
