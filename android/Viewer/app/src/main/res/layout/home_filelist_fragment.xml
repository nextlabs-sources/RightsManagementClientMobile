<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/home_filelist_fragment"
    android:background="@android:color/white">

    <RelativeLayout
        android:id="@+id/home_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/home_normal_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <include layout="@layout/home_title_bar" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/home_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone">
            <include layout="@layout/home_search_bar" />
        </RelativeLayout>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/home_show_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/home_title">
    </FrameLayout>
</RelativeLayout>