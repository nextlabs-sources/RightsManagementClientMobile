<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/home_item_whitebk"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
    >
    <ImageButton
        android:id="@+id/home_service_image"
        android:layout_width="32dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:background="@android:color/transparent"/>
    <RelativeLayout
        android:id="@+id/home_account_text_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/home_service_image"
        android:layout_toEndOf="@+id/home_service_image">
        <TextView
            android:id="@+id/home_service_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/text_black"
            />
        <TextView
            android:id="@+id/home_service_account_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:layout_below="@+id/home_service_name"/>
        <TextView
            android:id="@+id/home_service_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:ellipsize="middle"
            android:textSize="12sp"
            android:textColor="@color/text_gray"
            android:layout_below="@+id/home_service_account_id"/>
    </RelativeLayout>

    <ImageButton
        android:id="@+id/home_service_trash"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/home_account_delete"
        android:background="@android:color/transparent"
        />
</RelativeLayout>

