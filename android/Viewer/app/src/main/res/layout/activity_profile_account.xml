<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:id="@+id/profile_account_ui">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/relativelayout_style"
        android:id="@+id/rt_profile_account">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/account_info"
            android:textColor="@color/normal_text_color"
            android:textSize="18sp"
            android:id="@+id/tv_profile_account"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/back"
            android:drawableLeft="@drawable/file_category_back"
            android:textSize="18sp"
            android:id="@+id/tv_account_back"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:textColor="@color/normal_text_color" />

    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginTop="40dp"
        android:id="@+id/profile_account_list"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/rt_profile_account" />


</RelativeLayout>
